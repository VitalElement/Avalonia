<Style xmlns="https://github.com/perspex" Selector="Window">
  <Setter Property="Background" Value="{StyleResource SystemControlBackgroundAltHighBrush}"/>
  <Setter Property="FontFamily" Value="Segoe UI"/>
  <Setter Property="FontSize" Value="{StyleResource FontSizeNormal}"/>
  <Setter Property="Template">
    <ControlTemplate>
      <Border Background="{TemplateBinding Background}">
        <AdornerDecorator>
          <ContentPresenter Name="PART_ContentPresenter" Content="{TemplateBinding Content}" Margin="{TemplateBinding Padding}"/>
        </AdornerDecorator>
      </Border>
    </ControlTemplate>
  </Setter>
</Style>